<div class="container mt-5">
  <div class="row">
    <div class="col-lg-6 col-md-10 col-sm-11 mx-auto">
      <h4 class=text-center><%= @user.name %>さんとのチャット</h4>
  
      <div class="message mt-3">
        <% @chats.each do |chat| %>
          <% if chat.user_id != current_user.id %>
            <div class="text-left">
              <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", class: "rounded-pill" %>
              <% end %>
              <%= chat.message %><br>
              <p><%= @user.name %></p>
            </div>
  
          <% else %>
            <div class="text-right">
              <%= chat.message %>
              <%= attachment_image_tag current_user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", class: "rounded-pill" %><br>
              <p><%= current_user.name %></p>
            </div>
          <% end %>
        <% end %>
      </div>
  
      <div class="mt-5">
        <%= form_with model: @chat, remote: true do |f| %>
          <div class="form-group">
            <%= f.label :message, 'メッセージを送る', class: 'form-label' %>
            <%= f.text_field :message, class: 'form-control' %>
          </div>
  
          <%= f.hidden_field :room_id %>
  
          <div class="action text-center">
            <%= f.submit '送信', class: "btn btn-info btn-sm" %>
          </div>
        <% end %>
      </div>
  
  
    </div>
  </div>
</div>

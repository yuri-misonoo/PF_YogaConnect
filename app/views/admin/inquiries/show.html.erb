<div class="container mt-5">
  <div class="row">
    <div class="col-lg-6 col-md-9 col-sm-12 mx-auto">
      <h4 class="text-center">お問い合わせ詳細</h4>
  
      <div class="text-right">
        <%= link_to 'お問い合わせ一覧', admin_inquiries_path, class: 'btn btn-info btn-sm' %>
      </div>
  
      <table class="table text-secondary mt-4">
        <tbody>
          <tr>
            <td style="width:30%">ユーザーID</td>
            <td style="width:70%"><%= @inquiry.user_id %></td>
          </tr>
          <tr>
            <td>ユーザー名</td>
            <td><%= @inquiry.name %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @inquiry.email %></td>
          </tr>
        </tbody>
      </table>
  
      <div class="mt-3">
        <label>【タイトル】</label>
        <div class="border p-2"><%= @inquiry.title %></div>
        <label class="mt-3">【お問い合わせ内容】</label>
        <div class="border p-2"><%= @inquiry.message %></div>
      </div>
  
    </div>
  </div>
</div>

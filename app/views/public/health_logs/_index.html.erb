<table class="table mt-3">
  <thead>
    <tr>
      <th>日付</th>
      <th>体重</th>
      <th>体温</th>
      <th>体調</th>
      <th>ヨガ</th>
    </tr>
  </thead>

  <% health_logs.each do |health_log| %>
    <tbody>
      <tr>
        <td>
          <%= link_to health_log.health_log_on, user_health_log_path(current_user, health_log), class: 'text-info' %>
        </td>
        <td>
          <% unless health_log.weight %>
            <span>-</span>
          <% else %>
            <%= health_log.weight %>
          <% end %>
        </td>
        <td>
          <% unless health_log.temperature %>
            <span>-</span>
          <% else %>
            <%= health_log.temperature %>
          <% end %>
        </td>
        <td class="text-secondary">
          <%= health_log.feeling %>
        </td>
        <td>
          <% if health_log.is_active %>
            <i class="fas fa-check"></i>
          <% else %>
            <span>-</span>
          <% end %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>

<div class="mt-4">
  <%= paginate health_logs %>
</div>
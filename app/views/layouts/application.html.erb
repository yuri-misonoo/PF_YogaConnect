<!DOCTYPE html>
<html>
  <head>
    <title>Yoga</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header style="height: 100px; background-color: rgba(255, 182, 193)">
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <%= link_to 'Yoga Connect', root_path, class: 'navbar-brand p-3' %>
          
          <!--ハンバーガーメニュー-->
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item"><%= link_to '今日の記録', new_user_health_log_path(current_user) %></li>
                <li class="nav-item"><%= link_to '投稿一覧', posts_path %></li>
                <li class="nav-item"><%= link_to '投稿する', new_post_path %></li>
                <li class="nav-item"><%= link_to 'マイページ', user_path(current_user) %></li>
                <li class="nav-item"><%= link_to 'ログアウト', destroy_user_session_path %></li>
              <% elsif admin_signed_in? %>
                <li class="nav-item"><%= link_to 'ユーザー一覧', admin_users_path %></li>
                <li class="nav-item"><%= link_to '投稿一覧', admin_posts_path %></li>
                <li class="nav-item"><%= link_to 'コメント一覧', admin_post_comments_path %></li>
              <% else %>
                <li class="nav-item"><%= link_to 'ホーム', root_path %></li>
                <li class="nav-item"><%= link_to '投稿を見る', posts_path %></li>
                <li class="nav-item"><%= link_to 'ログイン', new_user_session_path %></li>
                <li class="nav-item"><%= link_to 'サインイン', new_user_registration_path %></li>
              <% end %>
            </ul>
          </div>
          
        </div>
      </nav> 
    </header>


    <main class="mb-auto">
      <%= yield %>
    </main>

  </body>
</html>

<div class="container mt-5">
  <div class="row">
    <div class="col-lg-6 col-md-10 col-sm-11 mx-auto">
      <h5 class="text-center">チャット一覧</h5>

      <% @user_rooms.each do |room| %>
        <table class="table">
          <tbody>
            <tr>
              <td style="width: 10%">
                <%= link_to chat_path(room.user) do %>
                  <%= attachment_image_tag room.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: "50x50", class: "rounded-pill" %>
                <% end %>
              </td>
              <td style="width: 70%">
                <%= room.user.name %><br>
                <% if room.chats != [] %>
                  <p><%= room.chats.last.message %></p>
              </td>
              <td style="width: 20%">
                <p><%= time_ago_in_words((room.chats.last).created_at).upcase %>前</p>
              </td>
                <% end %>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>

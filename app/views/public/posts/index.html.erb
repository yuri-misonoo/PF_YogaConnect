<div class="row">
  <div class="col-lg-6 col-md-7 col-sm-8 mx-auto">
    <h3>投稿一覧</h3>

    <div>
      <% @posts.each do |post| %>
      <div class="border-bottom pt-3 mb-3">
        <%= link_to user_path(post.user) do %>
          <%= attachment_image_tag post.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <% end %>
        <%= post.post_time %><br>
        <%= post.body %><br>
      </div>

      <% end %>
    </div>

  </div>
</div>




<div class="container mt-5">
  <div class="row">
    <div class="col-lg-6 col-md-10 col-sm-11 mx-auto">
  
    <h4 class="text-center">ユーザー情報詳細</h4>
  
  
      <div class="d-flex">
        <div>
          <%= attachment_image_tag @user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no_image.jpg", class: "rounded-pill" %><br>
          <%= @user.name %>
        </div>
  
        <div class="d-flex">
          <div class="text-center pt-4 pl-3"><!-- 投稿数 -->
            <%= @user.posts.count %> <br> <p>投稿</p>
          </div>
  
          <div class="text-center pt-4 pl-4"><!-- フォロワーの人数 -->
            <%= @user.followers.count %> <br> <p>フォロワー</p>
          </div>
  
          <div class="text-center pt-4 pl-4"><!-- フォロー中の人数 -->
            <%= @user.followings.count %> <br> <p>フォロー中</p>
          </div>
        </div>
      </div>
  
      <%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %>
        <div class="form-control text-center mt-4">
          <label class="form-label pr-4">会員ステータス</label>
          <%= f.radio_button :is_deleted, :false, checked: true %>
          <%= f.label :is_deleted, '有効' %>
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, '退会' %>
        </div>
        <div class="action text-center mt-3">
          <%= f.submit '更新', class: 'btn btn-info btn-s' %>
        </div>
  
      <% end %>
  
    </div>
  </div>
</div>

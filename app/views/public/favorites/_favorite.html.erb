<% if post.favorited_by?(current_user) %>

  <%= link_to post_favorites_path(post), method: :delete, local: true, class: "fas fa-heart text-danger" do %>
    <%= post.favorites.count %>
  <% end %>
<% else %>

  <%= link_to post_favorites_path(post), method: :post, locak: true, class: "far fa-heart text-secondary" do %>
    <%= post.favorites.count %>
  <% end %>
<% end %>
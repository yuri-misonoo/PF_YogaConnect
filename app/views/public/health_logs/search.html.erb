<div class="container mt-5">
  <div class="row">
    <div class="col-lg-6 col-md-9 col-sm-12 mx-auto">
      <h4 class="text-center">記録検索</h4>
  
      <div class="search-form mt-3">
        <%= form_with url: user_health_logs_search_path, method: :get, local: true do |f| %>
          <%= f.text_field :search, placeholder: '2021-09-01' %>
          <%= f.submit '検索' %>
        <% end %>
      </div>
  
      <div class="text-right">
        <%= link_to '戻る', user_health_logs_path(current_user), class: "btn btn-info btn-sm" %>
      </div>
  
      <div>
        <%= render 'index', health_logs: @health_logs %>
      </div>
    </div>
  </div>
</div>

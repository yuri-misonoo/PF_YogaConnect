<div class="container mt-5">
  <div class="row">
    <div class="col-lg-7 col-md-10 col-sm-11 mx-auto">
      <h4 class="text-center mb-4"><%= @health_log.health_log_on %>の記録</h4>

      <div class="text-right">
        <%= link_to '編集', edit_user_health_log_path(@user, @health_log), class: "btn btn-info btn-sm" %>
        <%= link_to '記録一覧', user_health_logs_path(@user), class: "btn btn-secondary btn-sm" %>
      </div>

      <table class="table text-secondary mt-3">
        <tbody>
          <tr>
            <td style="width:30%"><%= link_to '体重', user_health_logs_graph_path(@user), class: 'text-secondary' %></td>
            <td style="width:70%"><%= @health_log.weight %>kg</td>
          </tr>
          <tr>
            <td><%= link_to '体温', user_health_logs_graph_path(@user), class: 'text-secondary' %></td>
            <td><%= @health_log.temperature %>℃</td>
          </tr>
          <tr>
            <td>体調</td>
            <td><%= @health_log.feeling %></td>
          </tr>
          <tr>
            <td><%= link_to 'ヨガ実践', user_health_logs_calendar_path(@user), class: 'text-secondary' %></td>
            <td>
              <% if @health_log.is_active == true %>
                実践した
              <% else %>
                実践していない
              <% end %>
            </td>
          </tr>
          <tr>
            <td><%= link_to 'ヨガ実践内容', user_health_logs_calendar_path(@user), class: 'text-secondary' %></td>
            <td><%= @health_log.exercise %></td>
          </tr>
          <tr>
            <td>朝食</td>
            <td><%= @health_log.morning %></td>
          </tr>
          <tr>
            <td>昼食</td>
            <td><%= @health_log.lunch %></td>
          </tr>
          <tr>
            <td>夕食</td>
            <td><%= @health_log.dinner %></td>
          </tr>
          <tr>
            <td><%= link_to '今日のメモ', user_health_logs_memo_path(@user), class: 'text-secondary' %></td>
            <td><%= @health_log.memo %></td>
          </tr>
        </tbody>
      </table>


    </div>
  </div>
</div>
